filegroup(
    name = "CExceptionSrc",
    srcs = ["lib/CException.c"],
)

filegroup(
    name = "CExceptionHdr",
    srcs = ["lib/CException.h"],
)

cc_library(
    name = "CException",
    srcs = [":CExceptionSrc"],
    hdrs = [":CExceptionHdr"],
    copts = ["-include stdint.h","-DCEXCEPTION_T=uint8_t", "-DCEXCEPTION_NONE=0x00"],
    strip_include_prefix = "lib/",
    visibility = ["//visibility:public"],
)
